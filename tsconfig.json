{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, // check uppercase and lowercase letter ref file.
    "strict": true,
    "skipLibCheck": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./*.ts"]
}
